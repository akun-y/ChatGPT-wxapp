<view class="iKnow">
  <scroll-view style="width:100%;height: 34vh;" scroll-with-animation="{{true}}" scroll-y="true">
    <view id="okk" scroll-with-animation="{{true}}">
      <block wx:for="{{msgList}}" wx:for-item="x" wx:for-index="i" wx:key="i">
        <view class="flex-column-start">
          <block wx:if="{{x.my}}">
            <!-- 用户输入的聊天信息 -->
            <view class="userinfo">
              <view class="usr-line-info">
                <view class="usermsg">
                  <text style="word-break:break-all;selectable:true;user-select:true">
                    {{x.msg}}
                  </text>
                </view>
                <view class="chat-img ">
                  <image style="height:50rpx;width:50rpx;" src="../../static/avatar.png" mode="aspectFit"></image>
                </view>
              </view>
            </view>
          </block>
          <!-- 服务器应答信息 -->
          <block wx:if="{{!x.my}}">
            <view class="aiinfo">
              <view class="chat-img ">
                <image style="height:50rpx;width:50rpx;" src="../../static/openai.png" mode="aspectFit"></image>
              </view>
              <view class="flex" style="width:530rpx;">
                <view class="aimsg">
                  <text style="word-break:break-all;selectable:true;user-select:true" selectable="true" user-select="true">
                    {{x.msg}}
                  </text>
                </view>
              </view>
            </view>
          </block>
        </view>
      </block>
      <view style="height:130rpx;"></view>
    </view>
  </scroll-view>
  <view class="flex-column-center">
    <!-- 连接服务器失败 -->
    <block wx:if="{{!apiSuccess}}">
      <button data-event-opts="{{[['tap',[['openpop',['$event']]]]]}}" class="btn" style="margin-bottom:20rpx;width:auto;" bindtap="hostCheck">
        {{apiBtnText}}
      </button>
    </block>
    <!-- 连接服务器成功，可发送信息 -->
    <block wx:if="{{apiSuccess}}">
      <view class="inpubut">
        <!-- 左边菜单按钮 -->
        <image class="menu-left" src="../../static/menu.png" mode="aspectFit"></image>
        <!-- 信息输入框 -->
        <input class="input-send" type="text" confirm-type="search" placeholder-class="my-neirong-sm" placeholder="描述您的问题" data-event-opts="{{[['confirm',[['sendMsg',['$event']]]],['input',[['__set_model',['','msg','$event',[]]]]]]}}" value="{{msg}}" bindconfirm="inputMsgConfirm" bindinput="inputMsg" />
        <!-- 发送按钮 -->
        <button class="btn-send" disabled="{{msgLoad}}" data-event-opts="{{[['tap',[['sendMsg',['$event']]]]]}}" bindtap="sendMsg">
          {{sendBtnText}}
        </button>
      </view>
    </block>
  </view>
  <!-- 连接服务器失败，检测服务器状态窗口 -->
  <!-- <select id="un-select"></select>  -->
  <!-- <uni-popup id="un-select3"></uni-popup> -->
  <uni-popup class="vue-ref" vue-id="8dd740cc-1" type="center" id="uniPopup" data-ref="popup" bind:__l="__l" vue-slots="{{['default']}}" bind:change="parentComponentFunction">
    <view class="popcls">
      <view class="uni-textarea" style="width:90%;margin:20rpx 20rpx;border:1px solid #000000;">
        <textarea style="width:100%;" placeholder-style="color:#F76260" placeholder="{{apiadj}}" data-event-opts="{{[['input',[['__set_model',['','api','$event',[]]]]]]}}" value="{{api}}" bindinput="__e"></textarea>
      </view>
      <view style="display:flex;flex-direction:row;">
        <button style="margin:10rpx;" type="primary" data-event-opts="{{[['tap',[['apiset',['$event']]]]]}}" bindtap="__e">
          确认
        </button>
        <button data-event-opts="{{[['tap',[['clopop',['$event']]]]]}}" style="margin:10rpx;" bindtap="__e">
          取消-
        </button>
      </view>
    </view>
  </uni-popup>
