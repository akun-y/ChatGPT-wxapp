.userinfo {
  -webkit-animation: oneshow .8s ease 1;
  animation: oneshow .8s ease 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 20rpx
}

.usermsg {
  margin-left: 20rpx;
  padding: 17rpx 1rpx;
  border-radius: 35rpx
}
.usermsg text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight:normal;
  justify-self: center;
}
.aiinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10rpx;
  margin-top: 20rpx;
  -webkit-animation: oneshow .8s ease 1;
  animation: oneshow .8s ease 1;
}

.usr-line-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  -webkit-animation: oneshow .8s ease 1;
  animation: oneshow .8s ease 1
}

.chat-img {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.aimsg {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 1rpx;
  padding: 8rpx 1rpx;
}
.aimsg text {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight:normal;
  justify-self: center;
}
.flex-column-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%
}

.inpubut {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #f9f9f9;
  width: 100%;
  height: 110rpx;
  font-size: 40rpx
}

.dh-input {
  width: 90%;
  height: 80rpx;
  border-radius: 100rpx;
  padding-left: 40rpx;
  margin-left: 20rpx;
  background-color: #f0f0f0
}

.my-neirong-sm {
  font-size: 23rpx;
  color: #616161
}

.btn {
  height: 70rpx;
  width: 18%;
  background-color: #6495ed;
  color: #fff;
  border-radius: 116px;
  font-size: 28rpx;
  margin-right: 10px;
  line-height: 35px;
}

.popcls {
  width: 80vw;
  height: 40vh;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center
}